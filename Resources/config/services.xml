<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="bazinga.jstranslation.translator.class">Bazinga\Bundle\JsTranslationBundle\Translator\BazingaJsTranslator</parameter>
        <parameter key="bazinga.jstranslation.translation_dumper.class">Bazinga\Bundle\JsTranslationBundle\Dumper\TranslationDumper</parameter>
    </parameters>

    <services>
        <service id="bazinga.jstranslation.translator" class="%bazinga.jstranslation.translator.class%" parent="translator.default" />

        <service id="bazinga.jstranslation.translation_dumper" class="%bazinga.jstranslation.translation_dumper.class%">
            <argument type="service" id="templating" />
            <argument type="service" id="bazinga.jstranslation.translator" />
            <argument type="service" id="router" />
            <argument type="service" id="filesystem" />
            <argument></argument> <!-- active locales -->
            <argument></argument> <!-- active domains -->
        </service>
    </services>
</container>
